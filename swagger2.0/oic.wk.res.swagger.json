        "responses": {
          "200": {
            "description": "",
            "x-example": [
              {
                "rt": ["oic.wk.res"],
                "if": ["oic.if.ll", "oic.if.b", "oic.if.baseline"],
                "links": [
                  {
                    "href": "/humidity",
                    "rt":   ["oic.r.humidity"],
                    "if":   ["oic.if.s", "oic.if.baseline"],
                    "p":    {"bm": 3},
