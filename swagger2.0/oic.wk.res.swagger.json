        ],
        "responses": {
          "200": {
            "description" : "",
            "x-example": [
              {
                "href": "/humidity",
                "rep":{
                  "rt":           ["oic.r.humidity"],
                  "humidity": 40,
                  "desiredHumidity": 40
                }
              },
              {
                "href": "/temperature",
                "rep":{
                  "rt":           ["oic.r.temperature"],
                  "temperature": 20.0,
                  "units": "C"
                }
              }
            ],
            "schema": { "$ref": "#/definitions/sbatch" }
